<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ffffff">

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:id="@+id/bigCover" android:layout_gravity="center_horizontal" android:background="#898989"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:paddingLeft="20dp"
            android:id="@+id/genres" android:textSize="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:paddingLeft="20dp"
            android:id="@+id/albumsAndTracks" android:textSize="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Биография"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:id="@+id/biographiTitle" android:textSize="20dp" android:textColor="#010101"/>
    <TextView
		android:scrollbarSize="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/biographi" android:textSize="17dp" android:textColor="#010101"/>
</LinearLayout>